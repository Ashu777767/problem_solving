#include <bits/stdc++.h>
using namespace std;
class Node{
    public:
    int data;
    Node* left;
    Node* right;
    
    Node(int val){
        data = val;
        left = right = NULL;
    }
};
static int idx = -1;
Node* buildTree(vector<int>preorder){

    idx++;
    if(preorder[idx] == -1){
        return NULL;
    }
        Node* root = new Node(preorder[idx]);
        root->left = buildTree(preorder); //creates left subtree
        root->right = buildTree(preorder); //creates rigth subtree
        return root; //connect the builded subroot to above roots
        
}
void topview(Node*root){
    queue<pair<Node*,int>>q;
    q.push({root,0});
    map<int,int>m;
    while(q.size()>0)
    {
        Node*curr = q.front().first;
        int HD = q.front().second;
        q.pop();
        
        if(m.find(HD) == m.end()){
            m[HD] = curr->data;
        }
        if(curr->left != NULL){
            q.push({curr->left,HD-1});
        }
        if(curr->right != NULL){
            q.push({curr->right,HD+1});
        }
    }
    for(auto val : m){   //prints the top view 
        cout<<val.second<<" ";
    }
    cout<<endl;
}
  //t.c is level order takes O(n) and find of map takes logn so t.c is O(nlogn)
  void bottomview(Node*root){
    queue<pair<Node*,int>>q;
    q.push({root,0});
    map<int,int>m;
    while(q.size()>0)
    {
        Node*curr = q.front().first;
        int HD = q.front().second;
        q.pop();
            m[HD] = curr->data;  //diectly allow to overwrite the latest value which is also the bottom value and so which 4 was skipped earlier is now overwrites 1 and gives right answer
        if(curr->left != NULL){
            q.push({curr->left,HD-1});
        }
        if(curr->right != NULL){
            q.push({curr->right,HD+1});
        }
    }
    for(auto val : m){   //prints the top view 
        cout<<val.second<<" ";
    }
}
  //t.c is level order takes O(n) and find of map takes logn so t.c is O(nlogn)
int main() {
	// your code goes here
	vector<int>preorder = {1,2,-1,-1,3,4,-1,-1,5,-1,-1};
	Node* root = buildTree(preorder);
	
	topview(root);
	bottomview(root);
	
	return 0;

}
