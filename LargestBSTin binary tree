#include <bits/stdc++.h>
using namespace std;

class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int data) {
        this->data = data;
        left = right = NULL;
    }
};

class Info {
public:
    int min;
    int max;
    int sz;

    Info(int min, int max, int sz) {
        this->min = min;
        this->max = max;
        this->sz = sz;
    }
};

Info helper(Node* root) {

    if (root == NULL) {
        // For NULL:
        // min  = INT_MAX
        // max  = INT_MIN
        // size = 0
        return Info(INT_MAX, INT_MIN, 0);
    }

    Info left  = helper(root->left);
    Info right = helper(root->right);

    // Check BST condition
    if (root->data > left.max && root->data < right.min) {

        int currMin = min(root->data, left.min);
        int currMax = max(root->data, right.max);
        int currSz  = left.sz + right.sz + 1;

        return Info(currMin, currMax, currSz);
    }

    // Not a BST â†’ return invalid range
    return Info(INT_MIN, INT_MAX, max(left.sz, right.sz));
}

int largestBSTinBT(Node* root) {
    return helper(root).sz;
}

int main() {
    /*
        Example Tree:
                50
               /  \
             20    60
            / \    / \
          10  25  55  70
    */

    Node* root = new Node(50);
    root->left = new Node(20);
    root->right = new Node(60);

    root->left->left = new Node(10);
    root->left->right = new Node(25);

    root->right->left = new Node(55);
    root->right->right = new Node(70);

    cout << "Largest BST size = " << largestBSTinBT(root) << endl;
}
