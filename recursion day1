#include <bits/stdc++.h>
using namespace std;
void print(int n){   //recursion
    if(n == 1){
        cout<<"1"<<endl;
        return ;
    }
    cout<<n<<" ";
    print(n-1);
}
factorial

int fact(int n){    // same for n  to 1 sum of numbers
    if(n == 0){
        return 1;
    }
    int factorial = n*fact(n-1);
    cout<<factorial<<" ";
    return factorial;
}

sum 
int sum(int n)
{
    if(n == 1){
        return 1;
    }
    return n+sum(n-1);
}
fibbonacci

array is sorted
bool isSorted(vector<int>arr,int n){
    if(n == 0 || n == 1){
        return true;
    }
    return arr[n-1]>=arr[n-2] && isSorted(arr,n-1);
}
bool checkTarget(vector<int>arr,int s,int e,int target){
    if(s>e){            //base case
        return false;
    }
    int mid = s+(e-s)/2;
    if(arr[mid] == target)
    {
        return true;
    }
    else if(arr[mid]<target){
        return checkTarget(arr,mid+1,e,target);
    }
    else{
        return checkTarget(arr,s,mid-1,target);
    }
}
int main() {
  vector<int>arr = {1,2,3,4};
  int s = 0;
  int e = arr.size()-1;
  int target = 7;
  int ans = checkTarget(arr,s,e,target);
  cout<< ans;

}
