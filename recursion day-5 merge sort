#include <bits/stdc++.h>
#include<iostream>
using namespace std;
void merge(int *arr,int s,int e){
     int mid = s+(e-s)/2;
    int len1= mid-s+1;
    int len2=e-mid;
    int *first=new int[len1];
    int *second=new int[len2];
    int main=s;
    for(int i = 0;i<len1;i++){
        first[i]=arr[main++];
    }
    main=mid+1;
     for(int i = 0;i<len1;i++){
        second[i]=arr[main++];
     }
      int index1 = 0;
    int index2 = 0;
    main = s;

    while(index1 < len1 && index2 < len2) {
        if(first[index1] < second[index2]) {
            arr[main++] = first[index1++];
        }
        else{
            arr[main++] = second[index2++];
        }
    }   

    while(index1 < len1) {
        arr[main++] = first[index1++];
    }

    while(index2 < len2 ) {
        arr[main++] = second[index2++];
    }

    delete []first;
    delete []second;


}
void mergesort(int *arr,int s,int e){
    if(s>=e){
        return ;
    }
    int mid = s+(e-s)/2;
    //left mergesort
    mergesort(arr,s,mid);
    //right part
    mergesort(arr,mid+1,e);
    //merging
    merge(arr,s,e);
}

int main() {
	int arr[] = {3,1,4,2,7,6,3,17,10};
	int n=9;
	mergesort(arr,0,n-1);
	for(int i = 0;i<n;i++){
	    cout<<arr[i]<<" ";
	}
	
	

}
